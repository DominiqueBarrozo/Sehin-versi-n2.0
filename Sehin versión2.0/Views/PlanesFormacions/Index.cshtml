@model IEnumerable<Sehin_versión2._0.Models.PlanesFormacion>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de planes de formación</h2>

<p>
    @Html.ActionLink("Crear plan", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Plan
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            Curso
        </th>
        <th>
            Trabajadores
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cursos.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trabajadores.Id)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

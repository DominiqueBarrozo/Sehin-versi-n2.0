@model IEnumerable<Sehin_versión2._0.Models.Riesgos>

@{
    ViewBag.Title = "Index";
}
<br><br><br>
<h2>Listado de Riesgos</h2>

<p>
    @Html.ActionLink("Crear riesgo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Factor)
        </th>
        <th>
            Condición de trabajo
        </th>
        <th>
            Tipo de riesgo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Factor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CondicionTrabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoRiesgos.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

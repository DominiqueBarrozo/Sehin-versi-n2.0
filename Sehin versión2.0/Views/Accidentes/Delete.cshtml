@model Sehin_versión2._0.Models.Accidentes

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Estás seguro de borrar el accidente?</h3>
<div>
    <h4>Accidentes</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt>
           Consecuencia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consecuencia)
        </dd>

        <dt>
           Código de puesto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Puestos.Id)
        </dd>

        <dt>
            Código de trabajador
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trabajadores.Id)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>

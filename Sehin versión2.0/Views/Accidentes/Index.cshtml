@model IEnumerable<Sehin_versión2._0.Models.Accidentes>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de accidentes</h2>

<p>
    @Html.ActionLink("Agregar nuevo accidente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Consecuencia
        </th>
        <th>
            Código de puesto
        </th>
        <th>
            Código de trabajador
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Consecuencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Puestos.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trabajadores.Id)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Exportar a PDF","ImprimirTodo")
</p>

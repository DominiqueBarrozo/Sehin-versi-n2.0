@model IEnumerable<Sehin_versión2._0.Models.Presupuesto>

@{
    ViewBag.Title = "Index";
}
<br><br><br>
<h2>Listado de presupuestos</h2>

<p>
    @Html.ActionLink("Crear presupuesto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            Número de presupuesto
        </th>
        <th>
            Fecha de vencimiento
        </th>
        <th>
            Cliente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechavencimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clientes.RazonSocial)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

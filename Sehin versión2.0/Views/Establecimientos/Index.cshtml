@model IEnumerable<Sehin_versión2._0.Models.Establecimientos>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de establecimientos</h2>

<p>
    @Html.ActionLink("Crear establecimiento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            Cantidad de trabajadores
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Superficie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ART)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domicilio)
        </th>
        <th>
            Razón social
        </th>
        <th>
            Localidad
        </th>
        <th>
            Actividad económica
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantTrabajadores)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Superficie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ART)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domicilio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clientes.RazonSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Localidades.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActividadesEconomicas.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
